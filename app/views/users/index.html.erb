<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100)%>
<%= @user.name %>
<%= @user.introduction %>
<% if @user == current_user %>
  <p><%= link_to "edit_profile", edit_user_path(current_user.id) %></p>
<% end %>

<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>


<h1>Users</h1>


<% @users.each do |users|%>

  <p>image
    <%= image_tag users.get_profile_image(100,100)%>
  </p>

  <p>name
  <%= users.name %></p>
  <p><%= link_to "Show", user_path(users)%></p>

<% end %>