
<%= flash[:notice] %>
<h1>User info</h1>
<%= image_tag @user.get_profile_image(100,100)%>
<%= @user.name %>
<%= @user.introduction %>
<% if @user == current_user %>
  <p><%= link_to "edit_profile", edit_user_path(current_user.id) %></p>
<% end %>


<h1>New book</h1>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %>
    <%= f.submit 'Create Book' %>
  <% end %>


<h1>Books</h1>


<% @books.each do |book|%>

  <p>Title:<%= link_to book.title, book_path(book)%></p>
  <p>Opinion:<%= book.body%></p>

<% end %>